<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/server_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/server_list_disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/server_list_picture"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:src="@drawable/computer_case" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/server_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServerName"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/server_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServerAddress"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/server_list_check_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/server_list_check_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01/01/2001\1000:00"
            android:textColor="#000"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_log"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/business_report" />

    </LinearLayout>
</LinearLayout>
